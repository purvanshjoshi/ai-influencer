# Voice Agents Integration - Environment Configuration Template
# Copy to .env.voice-agents and fill in actual values

# ==========================================
# LLM PROVIDER CONFIGURATION
# ==========================================

# OpenAI Configuration (Primary Provider)
REACT_APP_OPENAI_API_KEY=sk_test_your_api_key_here
REACT_APP_OPENAI_ORG_ID=org-your_org_id_here
REACT_APP_OPENAI_BASE_URL=https://api.openai.com/v1
REACT_APP_OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (Optional Provider)
REACT_APP_ANTHROPIC_API_KEY=sk_ant_your_api_key_here
REACT_APP_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration (Optional Provider)
REACT_APP_GOOGLE_API_KEY=your_google_api_key_here
REACT_APP_GEMINI_MODEL=gemini-1.5-pro

# ==========================================
# VOICE AGENTS - AUDIO TOUR CONFIGURATION
# ==========================================

# Audio Tour API Settings
VOICE_AGENTS_AUDIO_TOUR_ENDPOINT=/api/voice-agents/audio-tour
VOICE_AGENTS_AUDIO_TOUR_TIMEOUT=30000
VOICE_AGENTS_AUDIO_TOUR_MAX_RETRIES=3

# Supported duration options: 15, 30, 60
VOICE_AGENTS_AUDIO_TOUR_DEFAULT_DURATION=30

# ==========================================
# VOICE AGENTS - CUSTOMER SUPPORT CONFIGURATION  
# ==========================================

# Firecrawl Configuration (Web Document Processing)
FIRECRAWL_API_KEY=fc_your_api_key_here
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=voice_agents_kb

# FastEmbed Configuration
FASTEMBED_MODEL=BAAI/bge-small-en-v1.5

# Customer Support API Settings
VOICE_AGENTS_CUSTOMER_SUPPORT_ENDPOINT=/api/voice-agents/customer-support
VOICE_AGENTS_CUSTOMER_SUPPORT_TIMEOUT=15000
VOICE_AGENTS_CUSTOMER_SUPPORT_MAX_RETRIES=2

# ==========================================
# VOICE AGENTS - RAG CONFIGURATION
# ==========================================

# Voice RAG API Settings
VOICE_AGENTS_RAG_ENDPOINT=/api/voice-agents/voice-rag
VOICE_AGENTS_RAG_TIMEOUT=20000
VOICE_AGENTS_RAG_MAX_RETRIES=3

# PDF Processing Settings
VOICE_AGENTS_RAG_PDF_MAX_SIZE=52428800  # 50MB in bytes
VOICE_AGENTS_RAG_PDF_CHUNK_SIZE=1024
VOICE_AGENTS_RAG_PDF_OVERLAP=200

# ==========================================
# VOICE SETTINGS
# ==========================================

# Default voice: alloy, echo, fable, onyx, nova, shimmer
VOICE_AGENTS_DEFAULT_VOICE=nova
VOICE_AGENTS_DEFAULT_SPEED=1.0
VOICE_AGENTS_DEFAULT_PITCH=0

# ==========================================
# VECTOR DATABASE SETTINGS
# ==========================================

# Qdrant Collection Configuration
QDRANT_VECTOR_SIZE=384
QDRANT_DISTANCE_METRIC=Cosine
QDRANT_HNSW_EF=400
QDRANT_HNSW_EF_CONSTRUCT=200

# ==========================================
# CONVERSATION MANAGEMENT
# ==========================================

# Maximum conversation history entries to keep
VOICE_AGENTS_MAX_HISTORY=20

# Session timeout in milliseconds
VOICE_AGENTS_SESSION_TIMEOUT=3600000  # 1 hour

# ==========================================
# CACHING CONFIGURATION
# ==========================================

# Enable response caching
VOICE_AGENTS_ENABLE_CACHE=true

# Cache TTL in seconds
VOICE_AGENTS_CACHE_TTL=3600

# Redis Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Logging level: DEBUG, INFO, WARN, ERROR
VOICE_AGENTS_LOG_LEVEL=INFO

# Enable performance monitoring
VOICE_AGENTS_ENABLE_MONITORING=true

# Monitoring service endpoint
VOICE_AGENTS_MONITORING_ENDPOINT=http://localhost:9090/metrics

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================

# Environment: development, staging, production
NODE_ENV=development
REACT_APP_ENV=development

# API Base URL
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=30000

# CORS Settings
VOICE_AGENTS_CORS_ORIGIN=http://localhost:3000
VOICE_AGENTS_CORS_CREDENTIALS=true

# ==========================================
# AUTHENTICATION (If Required)
# ==========================================

# API Key Authentication
VOICE_AGENTS_API_KEY=your_api_key_here
VOICE_AGENTS_API_SECRET=your_api_secret_here

# JWT Configuration (Optional)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# ==========================================
# ERROR HANDLING
# ==========================================

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://key@sentry.io/12345
SENTRY_ENVIRONMENT=development

# Error Reporting
VOICE_AGENTS_ENABLE_ERROR_REPORTING=true

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable Audio Tour Agent
FEATURE_AUDIO_TOUR=true

# Enable Customer Support Agent  
FEATURE_CUSTOMER_SUPPORT=true

# Enable Voice RAG Agent
FEATURE_VOICE_RAG=true

# Enable Real-time Streaming
FEATURE_STREAMING=false

# Enable Multi-language Support
FEATURE_MULTI_LANGUAGE=false

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable debug mode
DEBUG=voice-agents:*

# Hot reload
FAST_REFRESH=true

# ==========================================
# INSTRUCTIONS FOR SETUP
# ==========================================
#
# 1. Copy this file to .env.voice-agents
# 2. Fill in all required values (marked with "your_")  
# 3. For development, keep localhost URLs
# 4. For production, update to actual domain URLs
# 5. Store API keys securely (never commit .env files)
# 6. Restart application after making changes
#
# Required minimum variables:
# - REACT_APP_OPENAI_API_KEY (or equivalent LLM key)
# - QDRANT_URL (for knowledge base agents)
# - REACT_APP_API_BASE_URL (for API communication)
#
# Optional but recommended:
# - SENTRY_DSN (for error tracking)
# - Redis configuration (for caching)
# - Monitoring endpoints
#
